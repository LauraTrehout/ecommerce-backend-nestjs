datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../generated/client"
}

model User {
    id        String   @id @default(uuid())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id          String   @id @default(uuid())
    name        String
    price       Decimal
    image       String
    description String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
